<%= form_for [post, Comment.new], class: "form-inline comment-box" , remote: true do |f| %>
                <div class="form-group">
                    <%= f.text_area :text, placeholder: 'Add a comment...' , class: "form-control", id: "comment_content", style:"height:200px"%>
                </div>
                    
                <div class="form-group">
                    <%=  submit_tag "Submit", :class => "btn btn-success" , style:"margin-top:10px"%>
                    <%= render 'comments/format_help', stuff: post %>
                </div>


                    
                    
<%  end %>
