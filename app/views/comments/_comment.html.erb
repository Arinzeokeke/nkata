<li id = <%= "comment_#{comment.id}" %> style="list-style: none;" >

	<div class="comments_container" id="4e2402e14f48" style="margin-left:0px">
	<div id = <%= "comment_score_#{comment.id}"%>>
		<%= render 'comments/scores', comment: comment %>
	</div>
	
		<div>
			<div class="comments_info_container">
			<%= link_to comment.user.username, profile_path(comment.user), style: "font-weight: bold", class:"comment-user" %>
			<%= time_ago_in_words comment.created_at %> ago
			</div>
			<div class="comment_body_container" style="padding-bottom:10px">
			<p><%= comment.text%></p>
			</div>
			<div id="comment_4e2402e14f48" class="comment_actions_container">
				<a href=<%=  "#comment-box-#{comment.id}" %> data-toggle="collapse" data-parent="#comments-accordion">reply</a>
			</div>
		</div>
	</div>

	<div class = "collapse comment-box" id = <%=  "comment-box-#{comment.id}"%> >
	<%= form_for [comment, Comment.new]  , class: "form-inline" , remote: true do  |f| %>
		<div class="form-group">
			<%= f.text_area :text, placeholder: 'Add a Reply' , class: "form-control", id: "comment_content", style:"height:200px"%>
		</div>

		<div class="form-group">
			<%=  submit_tag "Reply", :class => "btn btn-success green" , style:"margin-top:10px"%>
			<%= render 'comments/format_help', stuff: comment %>
		</div>

		
			
		


		<% end %>
	</div>
	<ul>
		<%= render comment.comments %>
	</ul>
</li>